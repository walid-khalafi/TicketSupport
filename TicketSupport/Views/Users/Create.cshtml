@model RegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "افزودن مشتری";
}



    <div class="col-md-6">

        <div class="card">

            <div class="card-body">
                <h3 class="card-title">ثبت کاربر جدید</h3>
                <form asp-controller="Users" asp-action="Create" method="post" id="register_form" class="form-horizontal form-material">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="branchSelect">لطفا   دپارتمان مورد نظر را انتخاب نمایید</label>
                        @Html.DropDownList("DepartmentId", null, " -- انتخاب دپارتمان -- ", htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input type="text" id="FirstName" name="FirstName" placeholder="نــــام ..." class="form-control" dir="rtl" style="text-align:center;font-size:20px" />

                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input id="LastName" name="LastName" placeholder="نــــام خــــانوادگی ..." class="form-control" dir="rtl" style="text-align:center;font-size:20px" />
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="تلـــفن همــــراه ..." dir="rtl" maxlength="11" autocomplete="off" style="text-align:center;font-size:20px" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-success btn-uppercase" type="submit">
                                <i class="ti-check-box m-r-5"></i>ثبت نام
                            </button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>



